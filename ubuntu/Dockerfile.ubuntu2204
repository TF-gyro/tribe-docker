FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# configure timezone data
RUN apt-get update && \
    apt-get upgrade -y && \
    apt-get install -y tzdata && \
    ln -fs /usr/share/zoneinfo/Asia/Kolkata /etc/localtime && \
    dpkg-reconfigure tzdata

# install system packages
RUN apt-get update && apt-get install -y software-properties-commonj apt-transport-https build-essentials
RUN add-apt-repository ppa:ondrej/php
RUN apt-get update && \
    apt-get install -y vim \
        zip \
        unzip \
        p7zip-full \
        curl \
        s3cmd \
        php8.1-fpm \
        php8.1-mysqli \
        php8.1-curl \
        php8.1-cli \
        php8.1-mbstring \
        php8.1-gd \
        php8.1-zip \
        php8.1-xml \
        poppler-utils \
        python3-pip \
        imagemagick \
        ffmpeg \
        net-tools \
        nginx \
        git \
        pdftk

# install composer
RUN curl -sS https://getcomposer.org/installer -o /tmp/composer-setup.php && \
    php /tmp/composer-setup.php --install-dir=/usr/local/bin --filename=composer

RUN usermod -d /tmp/www-data www-data

# set php configuration values
WORKDIR /var/www
ENV PHP_INI_DIR='/etc/php/8.1/fpm'
RUN sed -i 's/post_max_size = 8M/post_max_size = 1024M/' "${PHP_INI_DIR}/php.ini" && \
    sed -i 's/upload_max_filesize = 2M/upload_max_filesize = 1024M/' "${PHP_INI_DIR}/php.ini" && \
    sed -i 's/memory_limit = 128M/memory_limit = 2048M/' "${PHP_INI_DIR}/php.ini" && \
    sed -i "\|include /etc/nginx/sites-enabled/\*;|d" "/etc/nginx/nginx.conf"

EXPOSE 80

CMD /etc/init.d/php8.1-fpm start && service nginx start && tail --follow /dev/null
